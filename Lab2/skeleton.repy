def coordination(message):
    separator = message.find(",")
    leaderIp = message[len("RESULT"):separator]
    starterIp = message[separator+1:]
    setLeader(leaderIp)
    if str(getmyip()) != str(starterIp):
        sendDataToNextVessle(message)

